<%# login-failed flash message %>
<% if flash.now[:danger] %>
  <div class="container">
    <p class="alert alert-danger h4">
      <%= flash.now[:danger] %>
    </p>
  </div>
<% end %>

<%# login-need flash message %>
<% if flash[:login_need] %>
  <div class="container">
    <p class="alert alert-danger h4">
      <%= flash.now[:login_need] %>
    </p>
  </div>
<% end %>

<div class="container">
<h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
<%= form_for :session, url: { controller: "sessions", action: "create" } do |f| %>

  <%= f.label(:email, class: "sr-only") %>
  <%= f.email_field(:email, placeholder: "Email address", class: "form-control") %>
  <%= f.label(:password, class: "sr-only") %>
  <%= f.password_field(:password, placeholder: "Password", class: "form-control") %>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>
</div>
